 <h1>Album</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% if albums %}
            {% for album in albums %}
                <tr>
                    <td>{{ album.name }}</td>
                    <td>
                        <a href="{{ path('app_album_show', {'id': album.id}) }}">Voir</a>
                        {% if is_granted('ROLE_ARTIST') %}
                            <a href="{{ path('app_album_edit', {'id': album.id}) }}">Modifier</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Album vide</td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

 {% if is_granted('ROLE_ARTIST') %}
    <a href="{{ path('app_album_new') }}">Cr√©er un album</a>
 {% endif %}
