{% extends 'base.html.twig' %}

{% block title %}{{ playlist.name }}{% endblock %}

{% block body %}
    <h1>Titre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ playlist.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_homepage') }}">Retour au site</a>

    {% if is_granted('ROLE_ARTISTE') %}
        <a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}">edit</a>
        {{ include('playlist/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
